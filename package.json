    "url": "https://github.com/shernille37/E-Commerce/issues"
  },
  "homepage": "https://github.com/shernille37/E-Commerce#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dateformat": "^5.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.13.8",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.22"
